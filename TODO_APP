tasks = []

def show_tasks():
    if not tasks:
        print("No tasks yet!")
    else:
        for i, t in enumerate(tasks, 1):
            print(f"{i}. {t}")

def todo_app():
    while True:
        print("\n1. Add Task\n2. Show Tasks\n3. Remove Task\n4. Exit")
        choice = input("Choose: ")

        if choice == '1':
            task = input("Enter task: ")
            tasks.append(task)
        elif choice == '2':
            show_tasks()
        elif choice == '3':
            show_tasks()
            num = int(input("Enter task number to remove: "))
            if 0 < num <= len(tasks):
                tasks.pop(num - 1)
        elif choice == '4':
            print("Goodbye!")
            break
        else:
            print("Invalid choice")

todo_app()
